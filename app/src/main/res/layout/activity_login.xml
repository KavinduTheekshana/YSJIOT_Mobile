<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginLeft="80px"
    android:layout_marginRight="80px"
    tools:context=".Login">

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/ic_iot_logo_new_dark"
        android:layout_marginTop="-90dp">
    </ImageView>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_marginTop="100px"
        app:boxCornerRadiusBottomEnd="0px"
        app:boxCornerRadiusBottomStart="0px"
        app:boxCornerRadiusTopEnd="0px"
        app:boxCornerRadiusTopStart="0px"
        android:layout_height="wrap_content"
        android:hint="Your Email Address"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textFieldEmail"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        app:boxCornerRadiusBottomEnd="0px"
        app:boxCornerRadiusBottomStart="0px"
        app:boxCornerRadiusTopEnd="0px"
        app:boxCornerRadiusTopStart="0px"
        android:layout_height="wrap_content"
        android:hint="Your Password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textFieldPassword"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="45px"
        android:text="Login"

        app:cornerRadius="0dp"

        android:background="@drawable/radious"
        android:layout_marginTop="40px"



        />



</androidx.appcompat.widget.LinearLayoutCompat>